<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.ecommercedesign.ProductsFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/ic_launcher"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hipster morning jogging  shoes"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:text="$23.50"
                android:layout_marginLeft="0dp"
                card_view:layout_constraintLeft_toLeftOf="@+id/textView_item_name"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textView_item_name" />

            <ImageButton
                android:id="@+id/button_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_comment_black_24dp"
                android:background="@android:color/transparent"
                card_view:layout_constraintBottom_toBottomOf="@+id/textView_item_price"
                card_view:layout_constraintTop_toTopOf="@+id/textView_item_name"
                card_view:layout_constraintLeft_toRightOf="@+id/textView_item_name"
                android:layout_marginLeft="32dp"
                card_view:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/button_item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_heart"
                card_view:layout_constraintBottom_toBottomOf="@+id/button_item_comment"
                card_view:layout_constraintLeft_toRightOf="@+id/button_item_comment"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/button_item_comment"
                card_view:layout_constraintHorizontal_bias="0.501" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
